.guarantees
  padding-bottom 50px
  box-sizing border-box
  position relative
  &__title
    caption()
  &__divider
    position absolute
    width 100%
    height 50px
    bottom -50px
    z-index 2
.guarantees-info
  display flex
  flex-wrap wrap
  justify-content center
  &__item
    flex-grow 1
    flex-basis 370px
    max-width 370px
    text-align center
    box-sizing border-box
    padding 10px
    margin 10px
  &__img
    height 90px
    position relative
    .icon
      width 100%
      height 100%
      left 0
      top 0

  &__text
    padding 5px
