
.top-panel
  display flex
  position fixed
  z-index 100
  top -50px
  left 0
  right 0
  height 50px
  background-color rgba(15, 14, 14, 0.95)
  box-sizing border-box
  transition top 0.1s ease-in-out
  &_active
    top 0
.logo
  height 40px
  &_desktop
    display none
  &-link
    display inline-block
    font-size 0
    margin 5px 10px

.menu-button
  position absolute
  top 0
  right 0
  height 50px
  width 60px
  padding 5px 10px
  box-sizing border-box
  &:hover,
  &:active
    cursor pointer
  &__icon
    height 100%
    width 100%
    background-color rgba(15, 14, 14, 0.19)
    color pcolor
    display inline-block
    vertical-align middle
    position relative
    font-style normal
    text-align left
    text-indent -9999px
    direction ltr
    border 1px solid #e7e7e7
    border-radius 5px
    box-sizing border-box
    &:before,
    &:after
      content: ''
      pointer-events none
      width 28px
      height 3px
      position absolute
      right 5px
      transform-origin right
      transition: all 0.3s ease-in-out;
    &:before
      top 10px
      transform rotate(0deg)
      box-shadow inset 0 0 0 32px, 0 8px
    &:after
      top 26px
      transform rotate(0deg)
      box-shadow inset 0 0 0 32px

.menu
  &__container
    position fixed
    display flex
    top 50px
    bottom 0
    right -270px
    width 270px
    background-color rgba(15, 14, 14, 0.95)
    color pcolor
    font-weight 700
    box-sizing border-box
    overflow-y auto
    overflow-x hidden
    flex-direction column
    list-style none
    margin 0
    padding 0
    transition: all 0.3s ease-in-out
    z-index 2
  &__background
    position fixed
    width 100%
    height 100%
    left 0
    top 0
    z-index 1
    display none
  &__item
    margin 5px 5px
    font-size 14px
  &__section
    display block
    text-align center
    padding 8px 10px
    color inherit
    text-decoration none
    //border 1px solid #e7e7e7
    box-sizing border-box
    background-color rgba(15, 14, 14, 0.19)
    border-radius 5px
    font-weight 300
    &:hover,
    &:active
      background-color pcolor
      color scolor
      cursor pointer
  &-checkbox
    display none
  &-checkbox:checked + &-button

  &-checkbox:checked + &-button &-button__icon
    &:before
      top 8px
      right 9px
      transform rotate(-45deg)
      box-shadow inset 0 0 0 32px, 0 0
    &:after
      top 28px
      right 9px
      transform rotate(45deg)
  &-checkbox:checked ~ &__background
    display block

.top-panel.top-panel_active .menu-checkbox:checked ~ .menu .menu__container
  right 0

.social-links
  display flex
  justify-content center

  &__icon
    display block
    margin 10px
    &_instagram
      sprite-img($instagram)
    &_whatsapp
      sprite-img($whatsapp)
    &_telegram
      sprite-img($telegram)
    &_vk
      sprite-img($vk)
