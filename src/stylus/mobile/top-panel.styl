.top-panel
  display flex
  position fixed
  z-index 100
  top 0
  left 0
  right 0
  min-height 50px
  background-color rgba(15, 14, 14, 0.95)
  box-sizing border-box

.logo
  height 50px
  margin-left 10px

.menu-button
  position absolute
  top 0
  right 0
  height 50px
  width 60px
  padding 5px 10px
  box-sizing border-box
  &__icon
    height 100%
    width 100%
    background-color rgba(15, 14, 14, 0.19)
    color pcolor
    display inline-block
    vertical-align middle
    position relative
    font-style normal
    text-align left
    text-indent -9999px
    direction ltr
    border 1px solid #e7e7e7
    border-radius 5px
    box-sizing border-box
    &:before,
    &:after
      content: ''
      pointer-events none
      width 28px
      height 3px
      position absolute
      right 5px
      transform-origin right
      transition: all 0.3s ease-in-out;
    &:before
      top 10px
      transform rotate(0deg)
      box-shadow inset 0 0 0 32px, 0 8px
    &:after
      top 26px
      transform rotate(0deg)
      box-shadow inset 0 0 0 32px
    &:hover,
    &:active
      background-color pcolor
      color scolor
      cursor pointer



.menu
  position fixed
  display flex
  top 50px
  bottom 0
  right -270px
  width 270px
  background-color rgba(15, 14, 14, 0.95)
  color pcolor
  font-weight 700
  box-sizing border-box
  overflow-y auto
  overflow-x hidden
  flex-direction column
  list-style none
  margin 0
  padding 0
  transition: all 0.3s ease-in-out;
  &__item
    margin 5px 10px
    font-size 14px
  &__section
    display block
    padding 8px 20px
    border 1px solid #e7e7e7
    box-sizing border-box
    background-color rgba(15, 14, 14, 0.19)
    border-radius 5px
    &:hover,
    &:active
      background-color pcolor
      color scolor
      cursor pointer
  &-checkbox
    display none
  &-checkbox:checked + &-button &-button__icon
    &:before
      top 8px
      right 9px
      transform rotate(-45deg)
      box-shadow inset 0 0 0 32px, 0 0
    &:after
      top 28px
      right 9px
      transform rotate(45deg)
  &-checkbox:checked ~ &
    right 0