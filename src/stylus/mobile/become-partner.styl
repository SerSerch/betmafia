.become-partner
  box-sizing border-box
  background-attachment fixed
  background-size cover
  background-position center center
  background-repeat repeat
  background-image url("../img/become-partner_bg.jpg")
  text-align center
  position relative
  &__captcha
    display inline-block
    padding 14px 0 30px 0
  &__divider
    position absolute
    width 100%
    height 50px
    bottom 0
    z-index 2
  &__blackout
    background-color rgba(255, 255, 255, 0.521569)
    padding 50px 0 80px 0
    min-height 588px
    box-sizing border-box
  &__title
    caption()
  &__text
    font-size 16px
    font-weight 300
  &__controls
    display flex
    flex-wrap wrap
    justify-content center
  &__name,
  &__email,
  &__phone,
  &__submit
    width 200px
    margin 5px
    border-radius 5px
    outline none
    box-sizing border-box
    color #fff
    text-decoration none
  &__name,
  &__email,
  &__phone
    padding 6px 12px
    border 1px solid #ccc
    background-color #fff
    box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
    font-size 14px
    line-height 1.4
    color #555
    transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
    &::-moz-placeholder
      color #999
      opacity 1
    &:-ms-input-placeholder
      color: #999
    &::-webkit-input-placeholder
      color: #999
    &:focus
      border-color #66afe9
      box-shadow inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)
  &__submit
    background-color rgb(3, 3, 3)
    border 2px solid rgb(2, 2, 2)
    color #fff
    padding 8px 16px
    font-size 18px
    line-height 1.4em
    cursor pointer
    position relative
    display inline-block
    overflow hidden
    &:after
      content ''
      background rgba(255, 255, 255, 0.3)
      position absolute
      width 100%
      height 100%
      left -100%
      top 0
      display block
      transition 1s left ease-in-out
    &:hover:after
      left 0
