.top-panel
  background-color inherit
  position absolute
  height auto
  transition none
  &_1st-screen-scrolled
    top -100%
    z-index 10
    position fixed
    background #000
  &_active.top-panel_1st-screen-scrolled
    top 0

.nav
  position absolute
  padding-top 35px
  box-sizing border-box
  top 0
  left 160px
  right 0

.menu-button
  display none

.menu
  &__container
    position static
    flex-direction row
    background-color inherit
    width 100%
  &__item
    flex-grow 1
    margin-top 10px
  &__section
    border 0
    background-color inherit
    &:hover
      background-color rgba(15, 14, 14, 0.19)
      border-color rgb(15, 14, 14)
      color pcolor
    &:active
      background-color rgba(15, 14, 14, 0.68)
      border-color rgb(12, 11, 11)
      color pcolor

.logo
  height 90px
  padding-bottom 20px
  &-link
    margin 20px 0 0 50px
