.feedback
  color pcolor
  box-sizing border-box
  background-attachment fixed
  background-size cover
  background-position center center
  background-repeat repeat
  background-image url("../img/feedback_bg.jpg")
  position relative
  &__blackout
    background-image linear-gradient(rgba(0, 0, 0, 0.8) 0%, rgba(25, 77, 77, 0.2) 100%)
    padding 50px 0 80px 0
    box-sizing border-box
  &__image
    object-fit cover
    width 100%
    height 100%
  &__title
    caption()
  &__container
    padding 20px 60px
    box-sizing border-box
    position relative
  &__divider
    position absolute
    width 100%
    height 50px
    z-index 2
    bottom 0

  &__box
    border 1px solid #fff
  &__item-dot
    width 16px
    height 16px
    border-radius 50%
    background-color #666
    margin 0 5px
    border 1px solid rgba(255, 255, 255, .5)
    display inline-block
    outline none
    cursor pointer
    &.tns-nav-active
      background-color: #000
  &__nav
    margin-top 10px
    text-align center
  &__item
    text-align center
    overflow hidden
  &__list
    display flex
    align-items center
  &__control
    position absolute
    top 50%
    width 32px
    height 32px
    outline none
    cursor pointer
    &_next
      sprite-img($feedback_next)
      right 15px
    &_prev
      sprite-img($feedback_prev)
      left 15px
  .tns-nav
    display inline-block
  .tns-outer
    text-align center
  /*.slider
    min-height 650px*/

.tns-inner
  max-width 100%
