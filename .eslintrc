{
  "extends": [
    "eslint:recommended",
    "idiomatic",
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "process": true
  },
  "rules": {
    "semi": ["error", "always"],
    "one-var": [2, {
      "var": "always",
      "let": "always"
    }],
    "camelcase": ["error", {
      "properties": "never"
    }],
    "global-require": ["error"]
  }
}
